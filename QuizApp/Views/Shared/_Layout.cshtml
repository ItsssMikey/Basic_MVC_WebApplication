@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuizApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body { padding-top: 70px; }
        .navbar-brand { font-weight: 600; }
        .toast-container { position: fixed; top: 1rem; right: 1rem; z-index: 1080; }
    </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom box-shadow fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">QuizApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- REPLACE THIS <ul> IN YOUR FILE WITH THIS ONE -->
                <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString()=="Home" ? "active" : "")"
                           asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString()=="Quizzes" ? "active" : "")"
                           asp-controller="Quizzes" asp-action="Index">Quizzes</a>
                    </li>
                </ul>
                <!-- /ul -->
            </div>
        </div>
    </nav>
</header>

<div class="container mt-4">
    <main role="main" class="pb-4">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted py-3 mt-auto">
    <div class="container text-center">
        &copy; @(DateTime.Now.Year) - QuizApp
    </div>
</footer>

<!-- ADD THIS TOAST CONTAINER AT THE END -->
<div class="toast-container">
@{
    var ok = TempData["Success"] as string;
    var err = TempData["Error"] as string;
}
@if (!string.IsNullOrWhiteSpace(ok))
{
    <div class="alert alert-success shadow-sm mb-2">@ok</div>
}
@if (!string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-danger shadow-sm mb-2">@err</div>
}
</div>
<!-- /toasts -->

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
