@model IEnumerable<QuizApp.Domain.Quiz>
@{
    ViewData["Title"] = "Quizzes";
}
<h2>Quizzes</h2>
<p><a class="btn btn-primary" asp-action="Create">Create New</a></p>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var q in Model)
{
    <tr>
        <td>@q.Title</td>
        <td>@q.CreatedUtc.ToLocalTime()</td>
        <td class="text-end">
            <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@q.Id">Details</a>
            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@q.Id">Edit</a>
            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@q.Id">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
