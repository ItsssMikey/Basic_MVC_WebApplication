@model QuizApp.Domain.Quiz
@{
    ViewData["Title"] = "Quiz Details";
}
<h2>@Model.Title</h2>
<p>@Model.Description</p>
<p><strong>Created:</strong> @Model.CreatedUtc.ToLocalTime()</p>

@if (Model.Questions?.Any() == true)
{
    <h4>Questions</h4>
    <ol>
    @foreach (var q in Model.Questions)
    {
        <li>
            <div>@q.Text (@q.Points pts)</div>
            @if (q.Options?.Any() == true)
            {
                <ul>
                @foreach (var o in q.Options)
                {
                    <li>@o.Text @(o.IsCorrect ? "(correct)" : "")</li>
                }
                </ul>
            }
        </li>
    }
    </ol>
}
<p>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back </a>
</p>
